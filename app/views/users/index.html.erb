<h1>Listing users</h1>

<% if notice %>
  <p><%= notice %></p>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td>
      <%= link_to 'Show', user %><br>
      <%= link_to 'Edit', edit_user_path(user) %><br>
      <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
