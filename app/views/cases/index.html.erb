<div>
  <div class="well">
    <table class="table">
      <thead>
        <tr>
          <th>Case Name</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cases.each do |c| %>
          <tr>
            <td><%= c.name %></td>
            <td>
              <%= link_to 'Detail', c %> |
              <%= link_to 'Edit', edit_case_path(c) %> |
              <%= link_to 'Delete', c, method: :delete, data: { confirm: 'Are you sure?'} %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Case', new_case_path %>
  </div>
</div>